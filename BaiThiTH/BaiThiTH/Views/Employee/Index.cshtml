@model IEnumerable<BaiThiTH.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
    <h2>Hover Rows</h2>
    <p class="text-secondary">Employee</p>              
    <table class="table table-hover">
        <a class="btn btn-success mb-3" asp-action="Create">Create</a>
        <thead>
        <tr class="table-dark text-center">
            <th>ID</th>
            <th>EmployeeName</th>
            <th>EmployeeCode</th>
            <th>Department</th>
            <th>Rank</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Id</td>
                <td>@item.EmployeeName</td>
                <td>@item.EmployeeCode</td>
                <td>@item.Department</td>
                <td>@item.Rank</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success" asp-action="Details"asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete"asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>

</body>
</html>
