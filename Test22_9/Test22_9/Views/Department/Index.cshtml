@{
}
@model IEnumerable<YourName.Models.Department>

<h1>Danh Sách Bộ Phận</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Bộ Phận</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@department.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>